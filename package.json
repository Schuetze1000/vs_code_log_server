{
  "name": "logserver-extension",
  "displayName": "Log Server Extension",
  "description": "An extension to view logs from a custom server.",
  "version": "0.0.1",
  "publisher": "Schuetze1000",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.startLogServer",
        "title": "LogServer - Start Log Server"
      },
      {
        "command": "extension.selectDevice",
        "title": "LogServer - Select Device"
      },
      {
        "command": "extension.stopLogServer",
        "title": "LogServer - Stop Log Server"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "logPanel",
          "title": "Log Server",
          "icon": "data/log.svg"
        }
      ]
    },
    "views": {
      "logPanel": [
        {
          "type": "webview",
          "id": "logpanel-webview",
          "name": "Log Server",
          "icon": "data/log.svg",
          "contextualTitle": "Log Server"
        }
      ]
    }
  },
  "activationEvents": [
    "*"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
